{
  "compilerOptions": {
    "strict": true,
    "strictPropertyInitialization": false,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "target": "ES2017",
    "lib": ["ES2017"],
    "module": "commonjs",
    "outDir": "./build/",
    "baseUrl": "src",
    "declarationDir": "./build/",
    "declarationMap": true,
    "declaration": true,
    "sourceMap": true
  },
  "include": ["src"]
}
