{
  "name": "stratops",
  "version": "0.8.1-pstrat5.1",
  "description": "Strategy game rules and operations",
  "keywords": [
    "chess",
    "playstrategy",
    "fen",
    "pgn",
    "uci",
    "typescript"
  ],
  "repository": "https://github.com/Mind-Sports-Games/stratops",
  "author": "playstrategy.org",
  "license": "GPL-3.0-or-later",
  "type": "module",
  "module": "dist/esm/index.js",
  "main": "dist/cjs/index.js",
  "types": "index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "dist/types/*"
      ]
    }
  },
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./*": {
      "import": "./dist/esm/*.js",
      "require": "./dist/cjs/*.js",
      "types": "./dist/types/*.d.ts"
    }
  },
  "sideEffects": false,
  "packageManager": "pnpm@9.1.0",
  "engines": {
    "node": ">=20",
    "pnpm": "^9"
  },
  "dependencies": {
    "@badrap/result": "^0.2"
  },
  "devDependencies": {
    "@jest/globals": "^29",
    "@typescript-eslint/eslint-plugin": "^7",
    "@typescript-eslint/parser": "^7",
    "dprint": "^0.45",
    "eslint": "^8",
    "jest": "^26.6.3",
    "ts-jest": "^26.5.4",
    "typedoc": "^0.23",
    "typescript": "4.9"
  },
  "scripts": {
    "prepare": "tsc --declarationDir dist/types && tsc --outDir dist/cjs --module commonjs --declaration false",
    "test": "node node_modules/jest/bin/jest.js",
    "doc": "typedoc src/types.ts src/attacks.ts src/util.ts src/squareSet.ts src/board.ts src/setup.ts src/chess.ts src/compat.ts src/debug.ts src/fen.ts src/san.ts src/transform.ts src/variant.ts src/pgn.ts",
    "lint": "eslint src/*.ts",
    "format": "dprint fmt",
    "check-format": "dprint check"
  },
  "files": [
    "/src",
    "/dist",
    "!/**/*.test.*"
  ],
  "jest": {
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "\\.ts$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "moduleNameMapper": {
      "^(.*)\\.js$": "$1"
    }
  }
}
